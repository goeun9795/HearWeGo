<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity">

    <!-- 도움말 -->
    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="411dp"
        android:layout_height="823dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background"
        tools:ignore="MissingConstraints">

    </RelativeLayout>

    <!-- 홈 버튼 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 길 안내 -->
        <Button
            android:id="@+id/help_navi"
            android:layout_width="395dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/default_yellow"
            android:fontFamily="@font/inter_medium"
            android:text="길 안내"
            android:textColor="@color/yellow"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- 주변시설 -->
        <Button
            android:id="@+id/help_surrounding"
            android:layout_width="395dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/default_yellow"
            android:fontFamily="@font/inter_medium"
            android:text="주변시설"
            android:textColor="@color/yellow"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- 즐겨찾기 -->
        <Button
            android:id="@+id/help_bookmark"
            android:layout_width="395dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/default_yellow"
            android:fontFamily="@font/inter_medium"
            android:text="즐겨찾기"
            android:textColor="@color/yellow"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- 설정 -->
        <Button
            android:id="@+id/help_setting"
            android:layout_width="395dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/default_yellow"
            android:fontFamily="@font/inter_medium"
            android:text="설정"
            android:textColor="@color/yellow"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title_surrounding"
        android:layout_width="411dp"
        android:layout_height="92dp"
        android:background="@drawable/frame_29"
        tools:ignore="MissingConstraints">

        <!-- 도움말 -->
        <TextView
            android:id="@+id/도움말"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="10sp"
            android:text="도움말"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/home"
        android:layout_width="205dp"
        android:layout_height="84dp"
        android:layout_marginTop="739dp"
        android:background="@drawable/frame_31"
        android:text="홈"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 이전 버튼 -->
    <Button
        android:id="@+id/previous"
        android:layout_width="205dp"
        android:layout_height="84dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="739dp"
        android:background="@drawable/frame_31"
        android:text="이전"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintLeft_toRightOf="@+id/home"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>