<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookmarkEdit">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="411dp"
        android:layout_height="823dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background"
        tools:ignore="MissingConstraints">
    </RelativeLayout>

    <!-- 즐겨찾기명, 주소 -->
    <RelativeLayout
        android:id="@+id/frame_destination_address"
        android:layout_width="412dp"
        android:layout_height="140dp"
        android:background="#0A0C4A"
        tools:ignore="MissingConstraints">

        <!-- 즐겨찾기명 -->
        <TextView
            android:id="@+id/bookmark"
            android:layout_marginTop="25dp"
            android:text="즐겨찾기명"
            android:textColor="@color/yellow"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <!-- 주소 -->
        <TextView
            android:id="@+id/bookmark_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="즐겨찾기 주소"
            android:textColor="@color/yellow"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_medium"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="79dp"/>
    </RelativeLayout>

    <!-- 즐겨찾기 삭제 버튼 -->
    <Button
        android:id="@+id/delete_bookmark"
        android:layout_width="395dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/frame_6"
        android:fontFamily="@font/inter_medium"
        android:text="즐겨찾기 삭제"
        android:textColor="@color/yellow"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 목적지로 설정 버튼 -->
    <Button
        android:id="@+id/set_destination"
        android:layout_width="395dp"
        android:layout_height="280dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="318dp"
        android:background="@drawable/frame_destination"
        android:fontFamily="@font/inter_medium"
        android:text="목적지로 설정"
        android:textColor="@color/yellow"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <!-- 홈 버튼 -->
    <Button
        android:id="@+id/home"
        android:layout_width="205dp"
        android:layout_height="84dp"
        android:layout_marginTop="739dp"
        android:background="@drawable/frame_31"
        android:text="홈"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 이전 버튼 -->
    <Button
        android:id="@+id/previous"
        android:layout_width="205dp"
        android:layout_height="84dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="739dp"
        android:background="@drawable/frame_31"
        android:text="이전"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintLeft_toRightOf="@+id/home"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>