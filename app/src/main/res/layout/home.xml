<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- 홈 화면 -->
    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="411dp"
        android:layout_height="823dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="783dp"
        android:layout_marginTop="1039dp"
        android:background="@drawable/background"
        tools:ignore="MissingConstraints" >

        <!-- Status Bar -->

        <!-- Menu Frame -->
        <RelativeLayout
            android:id="@+id/frame_menu"
            android:layout_width="395dp"
            android:layout_height="775dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp">

            <!-- Menu navi -->
            <Button
                android:id="@+id/menu_navi"
                android:layout_width="395dp"
                android:layout_height="187.75dp"
                android:background="@drawable/bg_navi"
                android:text="길 안내"
                android:gravity="right|center_vertical"
                android:paddingRight="61dp"
                android:textColor="@color/yellow"
                android:textSize="56sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"/>

            <!-- Menu surroundings -->
            <Button
                android:id="@+id/menu_surround"
                android:layout_width="395dp"
                android:layout_height="187.75dp"
                android:layout_marginTop="195.75dp"
                android:background="@drawable/bg_surroundings"
                android:text="주변시설"
                android:gravity="right|center_vertical"
                android:paddingRight="42dp"
                android:textColor="@color/yellow"
                android:textSize="56sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"/>

            <!-- Menu bookmarks -->
            <Button
                android:id="@+id/menu_bookmark"
                android:layout_width="395dp"
                android:layout_height="187.75dp"
                android:layout_marginTop="391.5dp"
                android:background="@drawable/bg_bookmark"
                android:text="즐겨찾기"
                android:gravity="right|center_vertical"
                android:paddingRight="42dp"
                android:textColor="@color/yellow"
                android:textSize="56sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"/>

            <!-- Menu setting -->
            <Button
                android:id="@+id/menu_setting"
                android:layout_width="395dp"
                android:layout_height="187.75dp"
                android:layout_marginTop="587.25dp"
                android:background="@drawable/bg_setting"
                android:text="설정"
                android:gravity="right|center_vertical"
                android:paddingRight="93.5dp"
                android:textColor="@color/yellow"
                android:textSize="56sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"/>
        </RelativeLayout>

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>